<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item

        android:bottom="10sp"
        android:left="10sp"
        android:right="10sp"
        android:top="10sp">

        <shape>
            <gradient
                android:startColor="@color/filter_background"
                android:endColor="@color/filter_background"
                android:angle="0" />
            <stroke
                android:width="1dp"
                android:color="@color/blackColor" />
            <corners android:radius="10dp" />
            <padding
                android:left="4dp"
                android:top="4dp"
                android:right="4dp"
                android:bottom="4dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="@color/filter_background"
                android:startColor="@color/filter_background"
                android:angle="0" />
            <stroke
                android:width="1dp"
                android:color="@color/blackColor" />
            <corners android:radius="10dp" />
            <padding
                android:left="4dp"
                android:top="4dp"
                android:right="4dp"
                android:bottom="4dp" />
        </shape>
    </item>



    <item>
        <shape>
            <corners android:radius="10dp" />
            <gradient
                android:endColor="@color/filter_background"
                android:startColor="@color/filter_background"
                android:angle="180" />
            <stroke
                android:width="1dp"
                android:color="@color/blackColor" />
            <corners android:radius="10dp" />
            <padding
                android:left="4dp"
                android:top="4dp"
                android:right="4dp"
                android:bottom="4dp" />
        </shape>
    </item>

</selector>