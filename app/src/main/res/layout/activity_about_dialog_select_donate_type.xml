<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="160dp"
    android:layout_height="wrap_content">
    <ImageView
        android:src="@drawable/ic_payment_black_24dp"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:scaleType="center"
        android:background="@color/dialog_background"
        android:contentDescription="@string/about_activity_dialog_donate_method_title" />
    <TextView
        style="@style/eventInfoTextMedium"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:background="@color/dialog_background"
        android:text="@string/about_activity_dialog_donate_method_title"/>
    <LinearLayout
        android:background="@color/app_main_color"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/about_activity_donate_by_paypal_relativelayout_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:background="@drawable/custom_button_rate"
            android:layout_marginTop="8dp">
            <ImageView
                android:id="@+id/about_activity_donate_by_paypal_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/paypal_logo2"/>
            <TextView
                android:id="@+id/about_activity_donate_by_paypal_text_view"
                android:layout_toRightOf="@id/about_activity_donate_by_paypal_image_view"
                android:layout_centerVertical="true"
                android:paddingLeft="8dp"
                style="@style/eventInfoTextMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paypal"/>
        </RelativeLayout>
        <View style="@style/Divider"
            android:layout_marginTop="8dp" />


        </LinearLayout>
</LinearLayout>