<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                style="@style/eventInfoTextMedium"
                android:layout_margin="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Filtry:"/>
            <TextView
                android:padding="8dp"
                style="@style/eventInfoTextSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Wybierz przedział czasowy, który Cie interesuje:"/>
            <LinearLayout
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/whiteColor"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/filter_date_from_text_view"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="10"
                    android:gravity="center"
                    android:background="?attr/editTextBackground"
                    android:hint="@string/event_trip_from"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@color/app_main_color"
                    android:text="-" />
                <TextView
                    android:id="@+id/filter_date_to_text_view"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="10"
                    android:gravity="center"
                    android:background="?attr/editTextBackground"
                    android:hint="@string/event_trip_to"/>
            </LinearLayout>
            <TextView
                android:id="@+id/filter_countries_text_view"
                android:padding="8dp"
                style="@style/eventInfoTextSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/catalog_activity_dialog_select_country_title"/>
            <GridView
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:id="@+id/filter_countries_grid_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:numColumns="6"
                android:background="@color/app_primary_color"></GridView>
            <TextView
                android:id="@+id/filter_sports_text_view"
                android:padding="8dp"
                style="@style/eventInfoTextSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select sports you are interested in"/>
            <LinearLayout
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/windsurfing_image_view"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginLeft="24dp"
                    android:gravity="center"
                    android:background="@drawable/custom_circle_24dp"
                    android:src="@drawable/windsurfing_icon"/>
                <ImageView
                    android:id="@+id/kitesurfing_image_view"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginLeft="24dp"
                    android:gravity="center"
                    android:background="@drawable/custom_circle_24dp"
                    android:src="@drawable/kitesurfing_icon"/>
                <ImageView
                    android:id="@+id/surfing_image_view"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginLeft="24dp"
                    android:background="@drawable/custom_circle_24dp"
                    android:src="@drawable/surfing_icon"/>
            </LinearLayout>
            <TextView
                android:id="@+id/filter_price_text_view"
                android:padding="8dp"
                style="@style/eventInfoTextSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Wybierz przedział cenowy, który Cie interesuje:"/>
            <LinearLayout
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_width="match_parent"
                android:background="@color/whiteColor"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/filter_price_value_edit_text"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"

                    android:inputType="number"
                    android:hint="Kwota"/>
                <Spinner
                    android:id="@+id/filter_price_currency_spinner"
                    android:layout_width="50dp"

                    android:layout_height="match_parent"></Spinner>
            </LinearLayout>
            <TextView
                style="@style/eventInfoTextMedium"
                android:layout_margin="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Sortowanie:"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/filter_sorting_text_view"
                android:padding="8dp"
                style="@style/eventInfoTextSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sortuj wycieczki po:"/>
            <Spinner
                android:id="@+id/filter_sorting_spinner"
                android:layout_width="200dp"
                android:layout_height="match_parent"></Spinner>
        </LinearLayout>
        </LinearLayout>
</android.support.constraint.ConstraintLayout>