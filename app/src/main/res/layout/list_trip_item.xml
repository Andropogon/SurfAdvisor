<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/event_trip_list_item_linear_layout_1"
    android:layout_height="94dp"
    android:orientation="horizontal"
    android:background="@color/app_main_color">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:id="@+id/event_trip_list_item_linear_layout_2"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:background="@color/blackColor"
        android:elevation="6dp"
        android:layout_margin="4dp">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:id="@+id/event_trip_list_item_linear_layout_3"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:background="@color/blackColor"
            android:backgroundTint="@color/app_primary_color"
            android:backgroundTintMode="src_over"
            android:elevation="6dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/list_text_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="6dp"
                android:layout_weight="100"
                android:orientation="vertical"
                android:paddingLeft="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="2dp">

                    <TextView
                        android:id="@+id/list_trip_from_text_view"
                        android:paddingRight="4dp"
                        style="@style/eventInfoCommentTextVerySmall"
                        android:text="@string/event_trip_from" />

                    <TextView
                        android:id="@+id/list_trip_start_place_text_view"
                        style="@style/eventInfoTextMedium"
                        tools:text="KuÅºnica, PL" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="2dp">

                    <TextView
                        android:id="@+id/list_trip_to_text_view"
                        android:paddingRight="4dp"
                        style="@style/eventInfoCommentTextVerySmall"
                        android:text="@string/event_trip_to" />

                    <TextView
                        android:id="@+id/list_trip_place_text_view"
                        style="@style/eventInfoTextMedium"
                        tools:text="London, UK" />
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/event_trip_details"
                        style="@style/eventInfoCommentTextVerySmall"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="0dp"
                        android:paddingRight="4dp"
                        android:layout_centerVertical="true"
                        android:text="@string/event_trip_details"
                        android:textAlignment="viewStart" />

                    <ImageView
                        android:id="@+id/list_trip_transport_image_view"
                        android:layout_marginRight="2dp"
                        android:layout_marginLeft="2dp"
                        android:layout_toRightOf="@id/event_trip_details"
                        android:layout_width="24dp"
                        android:layout_centerVertical="true"
                        android:layout_height="24dp"
                        tools:src="@drawable/trip_plane_ic" />
                    <ImageView
                        android:id="@+id/list_trip_character_image_view"
                        android:layout_toRightOf="@id/list_trip_transport_image_view"
                        android:layout_marginRight="2dp"
                        android:layout_marginLeft="2dp"
                        android:layout_width="24dp"
                        android:layout_centerVertical="true"
                        android:layout_height="24dp"
                        tools:src="@drawable/trip_private_ic" />
                    <ImageView
                        android:id="@+id/list_trip_type_windsurfing_image_view"
                        android:layout_marginRight="2dp"
                        android:layout_marginLeft="2dp"
                        android:padding="2dp"
                        android:layout_toRightOf="@id/list_trip_character_image_view"
                        android:background="@drawable/custom_circle_24dp"
                        android:layout_width="24dp"
                        android:layout_centerVertical="true"
                        android:layout_height="24dp"
                        android:src="@drawable/windsurfing_icon_without_circle" />
                    <ImageView
                        android:id="@+id/list_trip_type_kitesurfing_image_view"
                        android:layout_marginRight="2dp"
                        android:layout_marginLeft="2dp"
                        android:padding="2dp"
                        android:layout_toRightOf="@id/list_trip_type_windsurfing_image_view"
                        android:layout_width="24dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/custom_circle_24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/kitesurfing_icon_without_circle" />
                    <ImageView
                        android:id="@+id/list_trip_type_surfing_image_view"
                        android:layout_marginRight="2dp"
                        android:layout_marginLeft="2dp"
                        android:layout_toRightOf="@id/list_trip_type_kitesurfing_image_view"
                        android:layout_width="24dp"
                        android:layout_centerVertical="true"
                        android:layout_height="24dp"
                        android:padding="2dp"
                        android:background="@drawable/custom_circle_24dp"
                        android:src="@drawable/surfing_icon_without_circle" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/list_information_container"
                android:layout_width="96dp"
                android:layout_height="match_parent"
                android:layout_marginTop="3dp"
                android:gravity="center_vertical"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="3dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="1dp">

                    <ImageView
                        android:id="@+id/list_trip_start_date_image_view"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/calendar_black_24" />

                    <TextView
                        android:id="@+id/list_trip_start_date_text_view"
                        style="@style/eventInfoTextSmall"
                        android:layout_toEndOf="@id/list_trip_start_date_image_view"
                        android:layout_toRightOf="@id/list_trip_start_date_image_view"
                        tools:text="06.10" />

                    <TextView
                        style="@style/eventInfoTextSmall"
                        android:layout_toEndOf="@id/list_trip_start_date_text_view"
                        android:layout_toRightOf="@id/list_trip_start_date_text_view"
                        android:text=" - " />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="1dp"
                    android:paddingTop="1dp">


                    <TextView
                        android:id="@+id/list_trip_date_text_view"
                        style="@style/eventInfoTextSmall"
                        tools:text="02.03" />
                    <TextView
                        android:id="@+id/list_trip_date_counter_pause"
                        android:layout_toRightOf="@id/list_trip_date_text_view"
                        style="@style/eventInfoTextSmall"
                        android:text="-" />
                    <TextView
                        android:id="@+id/list_trip_date_counter"
                        android:layout_toRightOf="@id/list_trip_date_counter_pause"
                        style="@style/eventInfoTextSmall"
                        tools:text="8" />
                    <TextView
                        android:layout_toRightOf="@id/list_trip_date_counter"
                        style="@style/eventInfoTextSmall"
                        android:text="@string/event_trip_days" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="1dp">

                    <ImageView
                        android:id="@+id/list_trip_cost_image_view"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/tripc_money_ic" />

                    <TextView
                        android:id="@+id/list_trip_cost_text_view"
                        style="@style/eventInfoTextSmall"
                        android:layout_toRightOf="@id/list_trip_cost_image_view"
                        android:paddingLeft="4dp"
                        tools:text="100" />

                    <TextView
                        android:id="@+id/list_trip_cost_currency_text_view"
                        style="@style/eventInfoCommentTextVerySmall"
                        android:layout_toRightOf="@id/list_trip_cost_text_view"
                        android:paddingLeft="2dp"
                        android:layout_centerVertical="true"
                        tools:text="PLN" />
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>