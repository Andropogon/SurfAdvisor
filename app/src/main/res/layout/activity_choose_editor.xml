<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/activity_choose_editor_relation_relative_layout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/custom_square_with_frame">
                <ImageView
                    android:id="@+id/activity_choose_editor_relation_image_view"
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="32dp"
                    android:src="@drawable/ic_choose_relation" />
                <TextView
                    android:layout_below="@id/activity_choose_editor_relation_image_view"
                    style="@style/eventInfoTextMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:lines="3"
                    android:layout_centerHorizontal="true"
                    android:text="@string/category_event_relation"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/activity_choose_editor_private_trip_relative_layout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/custom_square_with_frame">
                <ImageView
                    android:id="@+id/activity_choose_editor_private_trip_image_view"
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="32dp"
                    android:src="@drawable/ic_choose_private" />
                <TextView
                    android:layout_below="@id/activity_choose_editor_private_trip_image_view"
                    style="@style/eventInfoTextMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:lines="3"
                    android:layout_centerHorizontal="true"
                    android:text="@string/category_event_trip_private"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/activity_choose_editor_organized_trip_relative_layout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/custom_square_with_frame">
                <ImageView
                    android:id="@+id/activity_choose_editor_organized_trip_image_view"
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="32dp"
                    android:src="@drawable/ic_choose_organized" />
                <TextView
                    android:layout_below="@id/activity_choose_editor_organized_trip_image_view"
                    style="@style/eventInfoTextMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:lines="3"
                    android:layout_centerHorizontal="true"
                    android:text="@string/category_event_trip_organized"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/activity_choose_editor_trip_camp_relative_layout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/custom_square_with_frame">
                <ImageView
                    android:id="@+id/activity_choose_editor_trip_camp_image_view"
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="32dp"
                    android:src="@drawable/ic_choose_camp" />
                <TextView
                    android:layout_below="@id/activity_choose_editor_trip_camp_image_view"
                    style="@style/eventInfoTextMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:lines="3"
                    android:text="@string/category_event_trip_camp"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>