<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<RelativeLayout

    android:id="@+id/user_activity_promotion_0_relative_layout"
    android:layout_marginLeft="12dp"
    android:layout_marginTop="4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/promotions_item_image_view"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:scaleType="fitCenter"
        android:layout_centerVertical="true"
        android:padding="4dp"
        android:src="@drawable/app_icon_v3"
        android:background="@drawable/custom_circle_small_with_frame"/>
    <TextView
        android:id="@+id/promotions_item_title_text_view"
        android:layout_toRightOf="@id/promotions_item_image_view"
        style="@style/eventInfoTextSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textStyle="bold"
        android:paddingLeft="4dp"
        android:lines="1"
        tools:text="SurfAdvisor kod:"/>
    <TextView
        android:id="@+id/promotions_item_description_text_view"
        android:layout_toRightOf="@id/promotions_item_image_view"
        android:layout_below="@id/promotions_item_title_text_view"
        style="@style/eventInfoCommentTextVerySmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:lines="6"
        tools:text="Specjalna cena dla użytkowników aplikacji na wszystkie wyjazdy w niej oferowane. Przy rezerwacji wyjazdu podaj powyższy kod, a otrzymasz niższą cenę."/>
</RelativeLayout>
</LinearLayout>