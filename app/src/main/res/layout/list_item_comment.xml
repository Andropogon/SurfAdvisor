<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingBottom="4dp"
    android:paddingTop="4dp"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/custom_button_comment"

        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="32dp">
            <ImageView
                android:id="@+id/comment_list_item_image_view"
                android:layout_margin="4dp"
                android:layout_width="24dp"
                android:layout_height="24dp"
                tools:src="@drawable/user_icon_shaka_24" />
            <TextView
                android:id="@+id/comment_list_item_username_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/eventInfoTextSmall"
                android:layout_toRightOf="@id/comment_list_item_image_view"
                android:layout_centerVertical="true"
                android:text="Jan Gąsienica-Józkowy"/>
            <TextView
                android:paddingRight="4dp"
                android:id="@+id/comment_list_item_date_text_view"
                android:drawableLeft="@drawable/baseline_access_time_black_18"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/eventInfoCommentTextVerySmall"
                android:layout_centerVertical="true"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="2h and 30min ago"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/comment_list_item_text_text_view"
            style="@style/eventInfoCommentTextVerySmall"
            android:background="@drawable/custom_button"
            android:paddingLeft="4dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:minLines="1"
            android:maxLines="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Spoko warunki, fala dobra, polecam."/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>