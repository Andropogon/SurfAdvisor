<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="160dp"
    android:background="?android:attr/activatedBackgroundIndicator"
    android:layout_height="wrap_content">
    <TextView
        style="@style/eventInfoTextMedium"
        android:paddingTop="24dp"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minLines="1"
        android:maxLines="2"
        android:background="@color/dialog_background"
        android:text="@string/catalog_activity_dialog_select_country_title"/>


    <ListView
        android:background="@drawable/bg_for_selecting_profile_icon"
        android:clickable="true"
        android:focusable="true"
        android:id="@+id/dialog_catalog_activity_select_country_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ListView>
</LinearLayout>